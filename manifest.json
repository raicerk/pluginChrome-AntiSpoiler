{
    "manifest_version": 2,
    "name": "Anti Spam",
    "version": "1.0.20",
    "description": "Primera Extensi√≥n para Chrome para evitar spoiler",
    "browser_action": {
        "default_title": "Make this page red",
        "default_icon": "logo.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "fondo.js"
        ]
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_security_policy": "object-src 'none'; script-src 'self' 'unsafe-eval'"
}